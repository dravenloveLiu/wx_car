.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.section {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.service-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.service-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  text-align: center;
  transition: all 0.3s;
}

.service-item.active {
  background-color: #e6f3fa;
  border: 2rpx solid #1296db;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.service-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.service-price {
  display: block;
  font-size: 32rpx;
  color: #f00;
  font-weight: bold;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.picker {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}

.label {
  width: 140rpx;
  font-size: 28rpx;
  color: #333;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.arrow {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f8f8;
  border-radius: 10rpx;
}

.submit-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #1296db;
  color: #fff;
  font-size: 32rpx;
} 