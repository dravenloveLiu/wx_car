.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.filter-section {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.filter-row {
  white-space: nowrap;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.filter-item.active {
  color: #fff;
  background-color: #1296db;
}

.tire-list {
  padding: 20rpx;
}

.tire-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.tire-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.tire-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tire-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tire-brand {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.tire-spec {
  font-size: 28rpx;
  color: #999;
}

.tire-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tire-price {
  font-size: 36rpx;
  color: #f00;
  font-weight: bold;
}

.tire-sales {
  font-size: 24rpx;
  color: #999;
}

.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
} 