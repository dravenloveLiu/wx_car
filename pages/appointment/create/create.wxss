.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-group {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.form-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #f8f8f8;
  padding: 0 20rpx;
  border-radius: 8rpx;
}

.input {
  height: 80rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #f8f8f8;
  padding: 0 20rpx;
  border-radius: 8rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  font-size: 30rpx;
  color: #333;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  box-sizing: border-box;
}

.submit-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #e74c3c;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
} 