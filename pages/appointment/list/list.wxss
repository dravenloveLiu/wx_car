.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.create-btn {
  padding: 20rpx 60rpx;
  background-color: #e74c3c;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.appointment-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.appointment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #f8f8f8;
}

.service-type {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status {
  font-size: 26rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.status-pending {
  background-color: #ffeaa7;
  color: #fdcb6e;
}

.status-confirmed {
  background-color: #81ecec;
  color: #00cec9;
}

.status-completed {
  background-color: #55efc4;
  color: #00b894;
}

.status-cancelled {
  background-color: #dfe6e9;
  color: #636e72;
}

.appointment-content {
  padding: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.description {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.appointment-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: flex-end;
}

.cancel-btn {
  font-size: 28rpx;
  color: #e74c3c;
  padding: 10rpx 30rpx;
  border: 1rpx solid #e74c3c;
  border-radius: 30rpx;
}

.float-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #e74c3c;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
}

.float-btn text {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
} 