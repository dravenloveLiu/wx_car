/* pages/auth/auth.wxss */
.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background-color: #f7f7f7;
}

.auth-section {
  width: 100%;
  max-width: 400px;
  background-color: #fff;
  border-radius: 12px;
  padding: 30px 20px;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
  margin-top: 20%;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40px;
}

.logo {
  width: 120px;
  height: 120px;
  margin-bottom: 20px;
  border-radius: 60px;
  background-color: #f2f2f2;
}

.logo-placeholder {
  width: 120px;
  height: 120px;
  margin-bottom: 20px;
  border-radius: 60px;
  background-color: #07c160;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-text {
  color: white;
  font-size: 20px;
  font-weight: bold;
}

.app-name {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 8px;
  color: #333;
}

.subtitle {
  font-size: 14px;
  color: #666;
  margin-bottom: 30px;
}

.auth-btn {
  width: 100%;
  height: 48px;
  line-height: 48px;
  background-color: #07c160;
  color: #fff;
  font-size: 16px;
  border-radius: 8px;
  margin-top: 20px;
}

.auth-logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.auth-logo image {
  width: 100%;
  height: 100%;
}

.auth-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  padding: 0 60rpx;
}

.form-section {
  padding-top: 20rpx;
}

.form-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}

.user-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-nickname {
  font-size: 32rpx;
  color: #333;
}

.form-content {
  padding: 0 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  height: 90rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}

.verification-code {
  position: relative;
}

.code-input {
  padding-right: 220rpx;
}

.get-code-btn {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 28rpx;
  color: #1296db;
  background-color: #e6f4fa;
  border-radius: 0 8rpx 8rpx 0;
}

.get-code-btn.disabled {
  color: #999;
  background-color: #f7f7f7;
}

.privacy-policy {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.policy-link {
  color: #1296db;
}

.submit-btn {
  width: 85%;
  height: 90rpx;
  background-color: #1296db;
  color: #fff;
  border-radius: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  margin-top: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}