.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 120rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
}

/* 车辆列表样式 */
.car-list {
  padding-bottom: 100rpx;
}

.car-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.car-info {
  margin-bottom: 30rpx;
}

.car-top {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.car-name {
  font-size: 34rpx;
  color: #333;
  font-weight: bold;
}

.car-tag {
  background-color: #07c160;
  color: #fff;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
}

.car-plate {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
}

.car-details {
  display: flex;
  font-size: 26rpx;
  color: #999;
}

.car-details text {
  margin-right: 30rpx;
}

.car-actions {
  display: flex;
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
}

.action-btn {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.edit-btn {
  background-color: #f5f5f5;
  color: #333;
}

.default-btn {
  background-color: #e6f7ff;
  color: #1890ff;
}

.delete-btn {
  background-color: #fff1f0;
  color: #f5222d;
} 