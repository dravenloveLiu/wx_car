/* pages/car/maintenance.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 车辆信息卡片 */
.car-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.car-info {
  display: flex;
  margin-bottom: 20rpx;
}

.car-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 8rpx;
  background-color: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.car-brand {
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
}

.car-detail {
  flex: 1;
}

.car-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.car-plate {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.car-meta {
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.car-year {
  margin-right: 16rpx;
}

.car-action {
  text-align: right;
  font-size: 26rpx;
  color: #07c160;
}

/* 保养记录部分 */
.maintenance-container {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-record {
  font-size: 26rpx;
  color: #07c160;
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  padding: 60rpx 0;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 6rpx solid #eee;
  border-top: 6rpx solid #07c160;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 无记录状态 */
.empty-records {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.add-button {
  padding: 16rpx 40rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 记录列表 */
.record-list {
  margin-top: 20rpx;
}

.record-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-date {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100rpx;
  margin-right: 20rpx;
}

.record-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-month {
  font-size: 24rpx;
  color: #666;
}

.record-year {
  font-size: 22rpx;
  color: #999;
}

.record-info {
  flex: 1;
}

.record-type {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.record-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.record-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.record-price {
  color: #f56c6c;
}

.record-arrow {
  display: flex;
  align-items: center;
  color: #ccc;
  margin-left: 20rpx;
}

/* 底部按钮 */
.bottom-btn {
  margin-top: 60rpx;
  padding-bottom: 30rpx;
}

.add-record-btn {
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
}