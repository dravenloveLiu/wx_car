.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.banner-content {
  padding: 30rpx;
  text-align: center;
  color: #ffffff;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.banner-desc {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 服务分类样式 */
.services {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin: 30rpx 0;
}

.service-item {
  height: 180rpx;
  border-radius: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.service-name {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}

/* 热门轮胎样式 */
.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.more {
  color: #666;
  font-size: 28rpx;
}

.arrow {
  margin-left: 6rpx;
}

.tire-list {
  white-space: nowrap;
}

.tire-item {
  display: inline-block;
  margin-right: 20rpx;
  width: 240rpx;
}

.tire-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tire-brand {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.tire-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 6rpx;
}

.tire-price {
  font-size: 30rpx;
  color: #e74c3c;
  font-weight: bold;
}

/* 预约按钮样式 */
.appointment-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #e74c3c;
  color: #ffffff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
} 