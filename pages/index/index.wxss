.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

/* 轮播图样式 */
.banner {
  width: 100%;
  height: 350rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-item {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.banner-content {
  padding: 30rpx;
  text-align: center;
  color: #ffffff;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.banner-desc {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

/* 服务分类样式 */
.services {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rpx;
  padding: 15rpx;
  margin: 20rpx 0;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  margin-bottom: 10rpx;
}

.service-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon {
  font-size: 30rpx;
  color: #ffffff;
}

.service-name {
  color: #333333;
  font-size: 24rpx;
  text-align: center;
}

/* 热门轮胎样式 */
.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.more {
  color: #666;
  font-size: 28rpx;
}

.arrow {
  margin-left: 6rpx;
}

.tire-list {
  white-space: nowrap;
}

.tire-item {
  display: inline-block;
  margin-right: 20rpx;
  width: 240rpx;
}

.tire-image {
  width: 240rpx;
  height: 240rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tire-brand {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.tire-name {
  font-size: 28rpx;
  color: #333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 6rpx;
}

.tire-price {
  font-size: 30rpx;
  color: #e74c3c;
  font-weight: bold;
}

/* 预约按钮样式 */
.appointment-btn {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #e74c3c;
  color: #ffffff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
}

/* 精选推荐样式 */
.recommendation-list {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 15rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.recommendation-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.recommendation-item:last-child {
  border-bottom: none;
}

.recommendation-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recommendation-placeholder {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
}

.recommendation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recommendation-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.recommendation-desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommendation-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
} 