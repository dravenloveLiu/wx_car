.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
}

.store-list {
  padding-bottom: 30rpx;
}

.store-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.store-info {
  margin-bottom: 20rpx;
}

.store-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.store-address {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.store-contact {
  display: flex;
  font-size: 26rpx;
  color: #999;
}

.store-hours {
  margin-right: 20rpx;
}

.store-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  margin-right: 20rpx;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
}

.phone .action-icon {
  color: #e74c3c;
}

.nav .action-icon {
  color: #1296db;
}

.footer-tips {
  padding: 30rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
} 