/* pages/tire/tire.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
}

.header {
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
  color: #999;
}

.tire-list {
  padding-bottom: 20rpx;
}

.tire-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.tire-image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.placeholder {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.placeholder text {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tire-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.tire-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.tire-spec {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.price-row {
  margin-bottom: 12rpx;
}

.price {
  font-size: 34rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-right: 12rpx;
}

.old-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
}

.rating-row {
  font-size: 24rpx;
  color: #999;
}

.rating {
  color: #f39c12;
  margin-right: 16rpx;
}

.reviews {
  margin-right: 16rpx;
}

.sold {
  color: #888;
}